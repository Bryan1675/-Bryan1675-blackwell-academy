{% extends "base.html.twig" %}

{% block body  %}

	<body>
		{% include ('modele/header.html.twig') %}


		<section>

			{% include 'flash_messages.html.twig' %}
			<h2>Contact</h2>

			{{ form_start(our_form,{'attr':{'id':'contact_form'}}
			) }}
			<div class="form-group">

				<div class="row">
					<div class="col-lg-2"></div>
					<div class="col-lg-8">
						<label for="contact_nom">Votre nom ou pseudo :</label>
					</div>
					<div class="col-lg-2"></div>
				</div>

				<div class="row">
					<div class="col-lg-2"></div>
					<div class="col-lg-8">{{form_widget(our_form.nom)}}</div>
					<div class="col-lg-2"></div>
				</div>

				<div class="row">
					<div class="col-lg-2"></div>
					<div class="col-lg-8">
						<label for="contact_email">Votre email :</label>
					</div>
					<div class="col-lg-2"></div>
				</div>

				<div class="row">
					<div class="col-lg-2"></div>
					<div class="col-lg-8">{{form_widget(our_form.email)}}</div>
					<div class="col-lg-2"></div>
				</div>

				<div class="row">
					<div class="col-lg-2"></div>
					<div class="col-lg-8">
						<label for="contact_objet">Objet du message :</label>
					</div>
					<div class="col-lg-2"></div>
				</div>

				<div class="row">
					<div class="col-lg-2"></div>
					<div class="col-lg-8">{{ form_widget(our_form.objet)}}</div>
					<div class="col-lg-2"></div>
				</div>
				<div class="row">
					<div class="col-lg-2"></div>
					<div class="col-lg-8">
						<label for="contact_message">Message :</label>
					</div>
					<div class="col-lg-2"></div>
				</div>

				<div class="row">
					<div class="col-lg-2"></div>
					<div class="col-lg-8">{{form_widget(our_form.message)}}</div>
					<div class="col-lg-2"></div>
				</div>

				<input type="hidden" id="g-recaptcha-response" name="g-recaptcha-response">

			</div>

			<div class="form-group row">
				<div class="col-lg-2"></div>
				<div class="col-lg-10">
					<button class="btn btn-light g-recaptcha" data-sitekey="Token" data-callback='onSubmit'>Envoyer</button>
				</div>
			</div>

			{{ form_end(our_form) }}

		</section>

		{% include ('modele/foot.html.twig') %}

		<script src="https://www.google.com/recaptcha/api.js"></script>

		<script>

			function onSubmit(token) {
			document.getElementById('contact_g-recaptcha-response').value = token;
			document.getElementById("contact_form").submit();

}
		</script>

	</body>

{% endblock %}

